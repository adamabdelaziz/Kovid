<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="stateValue"
            type="com.example.kovid.data.entities.StateValue" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.state.StateFragment">


        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            tools:visibility="gone" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:orientation="vertical"
            android:weightSum="3">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/top_grid_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                app:columnCount="2"
                app:rowCount="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/top_card_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorForeground"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/top_card_one_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/total_positive_cases"
                            android:textAlignment="center"
                            android:textColor="@color/colorText"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/top_card_one_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@{Integer.toString(stateValue.positive)}"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold|italic"
                            tools:text="886865" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/top_card_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorForeground"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/top_card_two_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/total_deaths"
                            android:textAlignment="center"
                            android:textColor="@color/colorText"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/top_card_two_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@{Integer.toString(stateValue.death)}"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold|italic"
                            tools:text="1,500,300" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/top_card_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorForeground"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/top_card_three_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Test Results"
                            android:textAlignment="center"
                            android:textColor="@color/colorText"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/top_card_three_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@{Integer.toString(stateValue.totalTestResults)}"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold|italic"
                            tools:text="1,500,300" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/top_card_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorForeground"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/top_card_four_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last Checked"
                            android:textAlignment="center"
                            android:textColor="@color/colorText"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/top_card_four_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@{Integer.toString(stateValue.date)}"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold|italic"
                            tools:text="1,500,300" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </androidx.gridlayout.widget.GridLayout>

            <!--        <TextView-->
            <!--            android:id="@+id/testtext"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:text="TextView" />-->

            <com.yabu.livechart.view.LiveChart
                android:id="@+id/live_chart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1">

            </com.yabu.livechart.view.LiveChart>

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/bottom_grid_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                app:columnCount="2"
                app:rowCount="2">

            </androidx.gridlayout.widget.GridLayout>


        </LinearLayout>

    </FrameLayout>
</layout>